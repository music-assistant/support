{
  "name": "frontend",
  "version": "0.0.0",
  "scripts": {
    "serve": "vite preview",
    "build": "vite build && npm run build:finish",
    "build:finish": "replace-in-file '/src/main.ts' '/mass.iife.js' 'dist/index.html'",
    "https-preview": "serve dist",
    "test:unit": "vitest --environment jsdom",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "dev": "vite",
    "preview": "vite preview --port 5050",
    "typecheck": "vue-tsc --noEmit -p tsconfig.vitest.json --composite false"
  },
  "dependencies": {
    "@mdi/font": "6.6.96",
    "home-assistant-js-websocket": "^7.0.3",
    "vue": "^3.2.33",
    "vue-i18n": "^9.1.10",
    "vue-router": "^4.0.15",
    "vue-virtual-scroller": "^2.0.0-alpha.1",
    "vuetify": "^3.0.0-beta.1",
    "webfontloader": "^1.0.0"
  },
  "devDependencies": {
    "@intlify/vite-plugin-vue-i18n": "^3.4.0",
    "@mdi/js": "^6.6.96",
    "@rushstack/eslint-patch": "^1.1.3",
    "@types/jsdom": "^16.2.14",
    "@types/node": "^17.0.31",
    "@types/webfontloader": "^1.0.0",
    "@vitejs/plugin-vue": "^2.3.2",
    "@vue/eslint-config-prettier": "^7.0.0",
    "@vue/eslint-config-typescript": "^10.0.0",
    "@vue/test-utils": "^2.0.0-rc.21",
    "@vue/tsconfig": "^0.1.3",
    "@vuetify/vite-plugin": "^1.0.0-alpha.0",
    "eslint": "^8.15.0",
    "eslint-plugin-vue": "^8.2.0",
    "https-localhost": "^4.7.1",
    "jsdom": "^19.0.0",
    "prettier": "^2.5.1",
    "replace-in-file": "^6.3.2",
    "sass": "^1.51.0",
    "sass-loader": "^12.6.0",
    "typescript": "~4.6.4",
    "vite": "^2.9.4",
    "vite-plugin-pwa": "^0.12.0",
    "vitest": "^0.12.1",
    "vue-cli-plugin-vuetify": "~2.4.8",
    "vue-tsc": "^0.34.11",
    "vuetify-loader": "^2.0.0-alpha.0"
  }
}
